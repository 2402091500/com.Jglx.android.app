<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_bill_timeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="11:35"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text_textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_magrin"
        android:layout_marginRight="@dimen/all_magrin"
        android:background="@drawable/rectangle_stroke_gray_corner"
        android:orientation="vertical"
        android:padding="@dimen/all_magrin" >

        <TextView
            android:id="@+id/item_bill_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联缴费单"
            android:textSize="@dimen/text_textSize_big" />

        <TextView
            android:id="@+id/item_bill_billTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="7月31日"
            android:textColor="@color/bg"
            android:textSize="@dimen/text_textSize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您户主朱德德电费的本月账单情况:"
            android:textSize="@dimen/text_textSize" />

        <TextView
            android:id="@+id/item_bill_dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="账单日:2015年07月用电"
            android:textSize="@dimen/text_textSize" />

        <TextView
            android:id="@+id/item_bill_muchTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="用电量:9度"
            android:textSize="@dimen/text_textSize" />

        <TextView
            android:id="@+id/item_bill_yinMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="本月话费应缴纳:220元"
            android:textSize="@dimen/text_textSize" />

        <TextView
            android:id="@+id/item_bill_shiMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="本月话费已经缴纳完成!"
            android:textSize="@dimen/text_textSize" />
    </LinearLayout>

</LinearLayout>