<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_magrin"
        android:paddingLeft="@dimen/all_padding"
        android:paddingRight="@dimen/all_padding" >

        <com.example.com.jglx.android.app.view.CircleImageView
            android:id="@+id/item_sfNear_iconIv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_toRightOf="@+id/item_sfNear_iconIv"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_sfNear_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天空的七彩"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_textSize_big" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_magrin"
                    android:layout_toRightOf="@+id/item_sfNear_nameTv"
                    android:background="@drawable/retangle_pink"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <ImageView
                        android:id="@+id/item_sfNear_sexIv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sex_woman" />

                    <TextView
                        android:id="@+id/item_sfNear_oldTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/item_sfNear_sexIv"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/item_sfNear_homeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_home"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="财富园2号"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_textSize" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_sfNear_rangeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1.02km"
            android:textColor="@color/green"
            android:textSize="@dimen/text_textSize_big" />
    </RelativeLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginTop="@dimen/all_magrin" />

</LinearLayout>